{
  "name": "chasegiunta/craft-js",
  "description": "A javascript client for Craft CMS",
  "type": "craft-plugin",
  "license": "mit",
  "support": {
    "email": "me@chasegiunta.com",
    "issues": "https://github.com/chasegiunta/craft-js/issues?state=open",
    "source": "https://github.com/chasegiunta/craft-js",
    "docs": "https://github.com/chasegiunta/craft-js",
    "rss": "https://github.com/chasegiunta/craft-js/releases.atom"
  },
  "require": {
    "php": ">=8.1",
    "craftcms/cms": "^4.3.10",
    "symfony/expression-language": "^6.4"
  },
  "require-dev": {
    "craftcms/ecs": "dev-main",
    "craftcms/generator": "^1.6",
    "craftcms/phpstan": "dev-main",
    "spatie/enum": "^3.13",
    "spatie/ray": "^1.40",
    "spatie/typescript-transformer": "^2.2",
    "vlucas/phpdotenv": "^5.6"
  },
  "autoload": {
    "psr-4": {
      "chasegiunta\\craftjs\\": "src/"
    }
  },
  "extra": {
    "handle": "craft-js",
    "name": "Craft JS",
    "developer": "Chase Giunta",
    "documentationUrl": "https://github.com/chasegiunta/craft-js"
  },
  "scripts": {
    "check-cs": "ecs check --ansi",
    "fix-cs": "ecs check --ansi --fix",
    "phpstan": "phpstan --memory-limit=1G"
  },
  "config": {
    "sort-packages": true,
    "platform": {
      "php": "8.1"
    },
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}
